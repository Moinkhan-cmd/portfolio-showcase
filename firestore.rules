// Firebase Firestore Security Rules
// Copy these rules to Firebase Console > Firestore Database > Rules
// 
// IMPORTANT: These rules allow public read access (so your portfolio can display content)
// and require authentication with admin email verification for writes.

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    // IMPORTANT: Replace 'YOUR_ADMIN_EMAIL@example.com' with your actual admin email
    // Or set up a config document to store the admin email
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email != null &&
             request.auth.token.email == get(/databases/$(database)/documents/config/admin).data.adminEmail;
    }
    
    // Fallback admin check using hardcoded email (use if config document not set up)
    // Uncomment this and comment out the above isAdmin() if you prefer hardcoded approach
    // function isAdmin() {
    //   return isAuthenticated() && request.auth.token.email == 'your-admin@email.com';
    // }
    
    // Config document for storing admin email - only admin can modify
    match /config/{configId} {
      allow read: if true;
      allow write: if isAuthenticated() && 
                     request.auth.token.email == resource.data.adminEmail;
    }
    
    // Public read access for portfolio data
    // Only verified admin can write (admin check is now server-side)
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /certifications/{certId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /experience/{expId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /skills/{skillId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Analytics collections - require authentication for tracking to prevent data poisoning
    // Note: Consider moving analytics to server-side Cloud Functions for better security
    match /analytics_page_views/{viewId} {
      allow read: if isAdmin();
      // Limit create to authenticated users and validate basic structure
      allow create: if isAuthenticated() && 
                      request.resource.data.keys().hasAll(['page', 'timestamp']) &&
                      request.resource.data.page is string &&
                      request.resource.data.page.size() < 500;
      allow update, delete: if isAdmin();
    }

    match /analytics_daily_stats/{statId} {
      allow read: if isAdmin();
      // Only admin can modify daily stats to prevent manipulation
      allow write: if isAdmin();
    }

    match /analytics_visitors/{visitorId} {
      allow read: if isAdmin();
      // Limit visitor tracking to authenticated users with structure validation
      allow create: if isAuthenticated() &&
                      request.resource.data.keys().hasAll(['timestamp']) &&
                      request.resource.data.size() < 10;
      allow update, delete: if isAdmin();
    }

    match /analytics_users/{userId} {
      allow read: if isAdmin();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
